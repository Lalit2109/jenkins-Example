                    <th>Storage Account</th>
                    <th>Location</th>
                    <th>Redundancy</th>
                    <th>Data (GB)</th>
                    <th>Days Inactive</th>
                    <th>Is Empty</th>
                    <th>Priority</th>
                    <th>Recommendation</th>
                    <th>Potential Savings/Year</th>
                </tr>
            </thead>
            <tbody>
"@
        
        foreach ($row in $Data) {
            $emptyClass = if ($row.IsEmpty) { "empty" } else { "" }
            $inactiveClass = if ($row.DaysSinceLastActivity -gt 90) { "inactive" } else { "" }
            $priorityClass = "priority-$($row.OptimizationPriority.ToLower())"
            
            $recClass = switch -Wildcard ($row.PrimaryRecommendation) {
                "*Delete*" { "delete" }
                "*Convert*" { "convert" }
                "*Tier*" { "tier" }
                "*Consolidate*" { "consolidate" }
                default { "" }
            }
            
            $html += @"
                <tr>
                    <td>$($row.SubscriptionName)</td>
                    <td>$($row.StorageAccountName)</td>
                    <td>$($row.Location)</td>
                    <td>$($row.CurrentRedundancy)</td>
                    <td class="$emptyClass">$([math]::Round($row.DataSizeGB, 2))</td>
                    <td class="$inactiveClass">$($row.DaysSinceLastActivity)</td>
                    <td class="$emptyClass">$(if ($row.IsEmpty) { "Yes" } else { "No" })</td>
                    <td class="$priorityClass">$($row.OptimizationPriority)</td>
                    <td><span class="recommendation $recClass">$($row.PrimaryRecommendation)</span></td>
                    <td>&pound;$([math]::Round($row.TotalPotentialSavings, 2))</td>
                </tr>
"@
        }
        
        $html += @"
            </tbody>
        </table>
        
        <div class="footer">
            <p>Report generated by Azure Storage Cost Optimization Script v2</p>
            <p>Note: Review all recommendations carefully before implementing. Deletion recommendations require manual confirmation.</p>
        </div>
    </div>
</body>
</html>
"@
        
        $utf8WithBom = New-Object System.Text.UTF8Encoding $true
        [System.IO.File]::WriteAllText($FilePath, $html, $utf8WithBom)
        Write-Log "HTML report exported to: $FilePath"
    }
    catch {
        Write-Log "Error exporting HTML: $_" "ERROR"
        throw
    }
}

function Main {
    Write-Log "Starting Azure Storage Cost Optimization Analysis v2"
    
    try {
        $context = Get-AzContext
        if (-not $context) {
            Write-Log "Not connected to Azure. Please run Connect-AzAccount first." "ERROR"
            exit 1
        }
        Write-Log "Connected to Azure as: $($context.Account.Id)"
    }
    catch {
        Write-Log "Error checking Azure connection: $_" "ERROR"
        exit 1
    }
    
    $config = Get-Config -ConfigFilePath $ConfigPath
    
    $analysisDays = if ($AnalysisPeriodDays -gt 0) { $AnalysisPeriodDays } else { $config.analysisPeriodDays }
    $optSettings = $config.optimizationSettings
    
    if ($OutputPath -eq "") {
        $OutputPath = $config.outputDirectory
    }
    
    if (-not [System.IO.Path]::IsPathRooted($OutputPath)) {
        $OutputPath = Join-Path (Get-Location).Path $OutputPath
    }
    
    $OutputPath = [System.IO.Path]::GetFullPath($OutputPath)
    
    if (-not (Test-Path $OutputPath)) {
        New-Item -ItemType Directory -Path $OutputPath -Force | Out-Null
        Write-Log "Created output directory: $OutputPath"
    }
    
    $timestamp = Get-Date -Format "yyyyMMdd_HHmmss"
    $csvPath = Join-Path $OutputPath "storage-optimization_$timestamp.csv"
    $htmlPath = Join-Path $OutputPath "storage-optimization_$timestamp.html"
    $errorLogPath = Join-Path $OutputPath "storage-optimization_errors_$timestamp.log"
    
    $results = @()
    $subscriptions = Get-AzSubscription -ErrorAction SilentlyContinue
    
    if (-not $subscriptions) {
        Write-Log "No subscriptions found or access denied" "ERROR"
        exit 1
    }
    
    Write-Log "Found $($subscriptions.Count) subscription(s)"
    
    foreach ($subscription in $subscriptions) {
        Write-Log "Processing subscription: $($subscription.Name) ($($subscription.Id))"
        
        try {
            Set-AzContext -SubscriptionId $subscription.Id -ErrorAction Stop | Out-Null
        }
        catch {
            Write-Log "Cannot access subscription $($subscription.Name): $_" "ERROR"
            continue
        }
        
        try {
            $storageAccounts = Get-AzStorageAccount -ErrorAction Stop
        }
        catch {
            Write-Log "Error retrieving storage accounts for subscription $($subscription.Name): $_" "ERROR"
            continue
        }
        
        Write-Log "Found $($storageAccounts.Count) storage account(s) in subscription $($subscription.Name)"
        
        foreach ($account in $storageAccounts) {
            Write-Log "Analyzing: $($account.StorageAccountName)"
            
            try {
                $dataSizeGB = Get-StorageAccountUsage -ResourceGroupName $account.ResourceGroupName -StorageAccountName $account.StorageAccountName
                $activity = Get-StorageAccountActivity -ResourceId $account.Id -Days $analysisDays
                $storageType = Get-StorageAccountType -StorageAccount $account
                $environment = Get-EnvironmentType -StorageAccountName $account.StorageAccountName -Config $config
                $configuration = Get-StorageAccountConfiguration -StorageAccount $account
                $tierInfo = Get-StorageAccountTier -StorageAccount $account -ActivityData $activity
                
                $currentRedundancy = $account.Sku.Name
                $isSecondaryReadUsed = $false
                
                if ($currentRedundancy -like "*RAGRS*") {
                    $secondaryRead = Get-SecondaryReadUsage -ResourceId $account.Id -Days $analysisDays
                    $isSecondaryReadUsed = $secondaryRead.IsUsed
                }
                
                $isEmpty = $dataSizeGB -eq 0
                $isInactive = $activity.DaysSinceLastActivity -gt $optSettings.inactiveAccountThresholdDays
                $isLowUsage = $dataSizeGB -gt 0 -and $dataSizeGB -lt $optSettings.lowUsageThresholdGB
                
                $currentPrice = Get-PricingForRegion -Config $config -Region $account.Location -RedundancyType $currentRedundancy -StorageType $storageType
                $currentMonthlyCost = $dataSizeGB * $currentPrice
                
                $recommendations = @()
                $totalSavings = 0
                $primaryRecommendation = "No Action"
                
                if ($isEmpty -and $optSettings.enableDeletionRecommendations -and $activity.DaysSinceLastActivity -gt $optSettings.emptyAccountThresholdDays) {
                    $deletionSavings = Calculate-DeletionSavings -DataSizeGB $dataSizeGB -Config $config -Region $account.Location -RedundancyType $currentRedundancy -StorageType $storageType
                    $recommendations += @{
                        Type = "Deletion"
                        Action = "Delete Empty Account"
                        Savings = $deletionSavings.AnnualSavings
                        Priority = "High"
                    }
                    $totalSavings += $deletionSavings.AnnualSavings
                    $primaryRecommendation = "Delete Empty Account"
                }
                elseif ($isInactive -and $optSettings.enableDeletionRecommendations) {
                    $deletionSavings = Calculate-DeletionSavings -DataSizeGB $dataSizeGB -Config $config -Region $account.Location -RedundancyType $currentRedundancy -StorageType $storageType
                    $recommendations += @{
                        Type = "Deletion"
                        Action = "Delete Inactive Account"
                        Savings = $deletionSavings.AnnualSavings
                        Priority = "High"
                    }
                    $totalSavings += $deletionSavings.AnnualSavings
                    if ($primaryRecommendation -eq "No Action") {
                        $primaryRecommendation = "Review for Deletion"
                    }
                }
                
                if (-not $isEmpty) {
                    $redundancyOpts = Get-RedundancyOptimization -CurrentRedundancy $currentRedundancy -DataSizeGB $dataSizeGB -Config $config -Region $account.Location -StorageType $storageType -Environment $environment -IsSecondaryReadUsed $isSecondaryReadUsed
                    
                    foreach ($opt in $redundancyOpts) {
                        if ($opt.Savings.AnnualSavings -gt 0) {
                            $recommendations += @{
                                Type = "Redundancy"
                                Action = $opt.Action
                                Savings = $opt.Savings.AnnualSavings
                                Priority = if ($environment -eq "Non-Prod") { "High" } else { "Medium" }
                            }
                            $totalSavings += $opt.Savings.AnnualSavings
                            if ($primaryRecommendation -eq "No Action" -or ($opt.Savings.AnnualSavings -gt $totalSavings * 0.5)) {
                                $primaryRecommendation = $opt.Action
                            }
                        }
                    }
                    
                    if ($optSettings.enableTierOptimization -and $tierInfo.CurrentTier -ne $tierInfo.RecommendedTier) {
                        $tierSavings = Calculate-TierOptimizationSavings -DataSizeGB $dataSizeGB -CurrentTier $tierInfo.CurrentTier -RecommendedTier $tierInfo.RecommendedTier -Config $config -Region $account.Location
                        if ($tierSavings.AnnualSavings -gt 0) {
                            $recommendations += @{
                                Type = "Tier"
                                Action = "Move to $($tierInfo.RecommendedTier) Tier"
                                Savings = $tierSavings.AnnualSavings
                                Priority = "Medium"
                            }
                            $totalSavings += $tierSavings.AnnualSavings
                        }
                    }
                }
                
                if ($isLowUsage -and $optSettings.enableConsolidationAnalysis) {
                    $recommendations += @{
                        Type = "Consolidation"
                        Action = "Consider Consolidation"
                        Savings = 0
                        Priority = "Low"
                    }
                    if ($primaryRecommendation -eq "No Action") {
                        $primaryRecommendation = "Consider Consolidation"
                    }
                }
                
                $optimizationPriority = Get-OptimizationPriority -IsEmpty $isEmpty -DaysSinceLastActivity $activity.DaysSinceLastActivity -DataSizeGB $dataSizeGB -TotalSavings $totalSavings -Environment $environment
                
                $result = [PSCustomObject]@{
                    SubscriptionName = $subscription.Name
                    SubscriptionId = $subscription.Id
                    ResourceGroupName = $account.ResourceGroupName
                    StorageAccountName = $account.StorageAccountName
                    Location = $account.Location
                    CurrentRedundancy = $currentRedundancy
                    StorageTier = if ($account.Sku.Name -like "Premium*") { "Premium" } else { "Standard" }
                    StorageType = $storageType
                    Environment = $environment
                    DataSizeGB = $dataSizeGB
                    DataSizeTB = [math]::Round($dataSizeGB / 1024, 2)
                    IsEmpty = $isEmpty
                    IsInactive = $isInactive
                    IsLowUsage = $isLowUsage
                    TransactionCount = $activity.TransactionCount
                    DaysSinceLastActivity = $activity.DaysSinceLastActivity
                    LastActivityDate = $activity.LastActivityDate
                    CurrentTier = $tierInfo.CurrentTier
                    RecommendedTier = $tierInfo.RecommendedTier
                    PublicAccessEnabled = $configuration.PublicAccessEnabled
                    HasLifecyclePolicy = $configuration.HasLifecyclePolicy
                    CurrentMonthlyCost = [math]::Round($currentMonthlyCost, 2)
                    TotalPotentialSavings = [math]::Round($totalSavings, 2)
                    OptimizationPriority = $optimizationPriority
                    PrimaryRecommendation = $primaryRecommendation
                    Recommendations = ($recommendations | ConvertTo-Json -Compress)
                }
                
                $results += $result
                Write-Log "Completed: $($account.StorageAccountName) - Data: $dataSizeGB GB, Priority: $optimizationPriority, Savings: £$totalSavings/year"
            }
            catch {
                Write-Log "Error analyzing account $($account.StorageAccountName): $_" "ERROR"
                continue
            }
        }
    }
    
    if ($results.Count -eq 0) {
        Write-Log "No storage accounts found" "WARN"
        exit 0
    }
    
    Write-Log "Exporting results..."
    Export-ToCsv -Data $results -FilePath $csvPath
    Export-ToHtml -Data $results -FilePath $htmlPath
    
    if ($script:ErrorLog.Count -gt 0) {
        $script:ErrorLog | Out-File -FilePath $errorLogPath -Encoding UTF8
        Write-Log "Error log saved to: $errorLogPath"
    }
    
    $totalSavings = ($results | Measure-Object -Property TotalPotentialSavings -Sum).Sum
    Write-Log "Analysis complete! Processed $($results.Count) storage account(s)"
    Write-Log "Total potential annual savings: £$([math]::Round($totalSavings, 2))"
    Write-Log "Reports saved to: $OutputPath"
}

Main

